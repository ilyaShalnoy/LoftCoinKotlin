<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoftCoinKotlin" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_six</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_blue</item>
        <item name="colorSecondaryVariant">@color/slate</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="buttonWelcome">@style/Widget.Theme.Button.Welcome</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.AppCompat.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AppCompat.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AppCompat.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AppCompat.H4</item>

    </style>

    <attr name="buttonWelcome" format="reference"/>
    <attr name="textAppearanceHeadline1" format="reference"/>
    <attr name="textAppearanceHeadline2" format="reference"/>
    <attr name="textAppearanceHeadline3" format="reference"/>
    <attr name="textAppearanceHeadline4" format="reference"/>

</resources>