<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Theme.Button.Welcome" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/btn_welcome_default</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">64dp</item>
    </style>

    <style name="TextAppearance.AppCompat" parent="TextAppearance.AppCompat.Body1"/>

    <style name="TextAppearance.AppCompat.H1">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextAppearance.AppCompat.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppCompat.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppCompat.H4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppCompat.H5">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="itemIconTint">@color/bottom_nav_colored_item</item>
        <item name="itemTextColor">@color/bottom_nav_colored_item</item>
    </style>

</resources>